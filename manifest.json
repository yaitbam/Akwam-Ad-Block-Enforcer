{
    "manifest_version": 3,
    "name": "Ad Block Enforcer for Akwam",
    "version": "1.0",
    "description": "Ad Block Enforcer for Akwam",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.jpg",
            "48": "images/icon16.jpg",
            "128": "images/icon16.jpg"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.akwam.us/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}